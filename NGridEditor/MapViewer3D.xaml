<Window x:Class="NGridMashEditor.MapViewer3D"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="3D Terrain Viewer" Height="720" Width="1280" 
        Background="#111"
        Focusable="True">

    <Grid>
        <Viewport3D Name="MainViewport" ClipToBounds="True">
            <Viewport3D.Camera>
                <PerspectiveCamera x:Name="Cam" Position="0, 2000, 0" LookDirection="0, -1, 0" UpDirection="0, 0, -1" FieldOfView="60" FarPlaneDistance="50000"/>
            </Viewport3D.Camera>

            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <Model3DGroup>
                        <AmbientLight Color="#FFF" />
                        <DirectionalLight Color="#888" Direction="-1,-3,-1" />
                    </Model3DGroup>
                </ModelVisual3D.Content>
            </ModelVisual3D>

            <ModelVisual3D x:Name="TerrainVisual" />
        </Viewport3D>
        <Path Data="M-5,0 L5,0 M0,-5 L0,5" Stroke="Lime" StrokeThickness="2" 
          HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.5"/>

        <Border HorizontalAlignment="Left" VerticalAlignment="Top" Background="#AA000000" Padding="10" Margin="10" CornerRadius="5">
            <StackPanel>
                <TextBlock Text="VISUALS" FontWeight="Bold" Foreground="#007ACC" Margin="0,0,0,5"/>
                <CheckBox Name="ChkShowGrid" Content="Show Grid Lines" IsChecked="True" Foreground="White" Click="UpdateVisuals"/>
                <CheckBox Name="ChkHeatmap" Content="Height Heatmap" IsChecked="False" Foreground="White" Click="UpdateVisuals" Margin="0,0,0,10"/>

                <TextBlock Text="CONTROLS" FontWeight="Bold" Foreground="#007ACC" Margin="0,0,0,5"/>
                <TextBlock Text="W, A, S, D : Move" Foreground="White"/>
                <TextBlock Text="E, Q : Up / Down" Foreground="White"/>
                <TextBlock Text="Right Click : Look" Foreground="White"/>
                <TextBlock Text="Shift : Sprint" Foreground="Gray"/>

                <TextBlock Text="CURSOR INFO" FontWeight="Bold" Foreground="#007ACC" Margin="0,15,0,5"/>
                <TextBlock Name="TxtCursorInfo" Text="Hover over terrain..." Foreground="Yellow" FontFamily="Consolas" FontSize="11"/>
                <TextBlock Name="TxtStats" Text="Loading..." Foreground="Yellow" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>