<Window x:Class="LoLNGRIDConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoL NGrid Editor" Height="800" Width="1200" 
        Background="#2D2D30" Foreground="#F1F1F1">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Background" Value="#3E3E42"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="3"/>
                </Style>
            </Style.Resources>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#007ACC"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,15,0,5"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#252526" BorderBrush="#3F3F46" BorderThickness="0,0,1,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
                <StackPanel>
                    <TextBlock Text="FILE OPERATIONS" Style="{StaticResource HeaderStyle}" Margin="0,0,0,5"/>
                    <Button Name="BtnLoad" Content="Load .aimesh_ngrid" Click="BtnLoad_Click"/>
                    <Button Name="BtnCreateFromBMP" Content="Create New from BMP" Click="BtnCreateFromBMP_Click" Background="#444"/>
                    <Button Name="BtnView3D" Content="Open 3D Viewer" Click="BtnView3D_Click" Background="#222" Margin="0,10,0,0"/>

                    <TextBlock Text="EDIT WALLS / FLAGS" Style="{StaticResource HeaderStyle}"/>
                    <Button Name="BtnExportBMP" Content="Export BMP (To Paint/PS)" Click="BtnExportBMP_Click"/>
                    <Button Name="BtnInjectBMP" Content="Inject BMP (Overwrite Walls etc.)" Click="BtnInjectBMP_Click" Background="#444" ToolTip="Updates walls etc. without breaking map size"/>

                    <TextBlock Text="EDIT HEIGHT" Style="{StaticResource HeaderStyle}"/>
                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Name="BtnExportHeight" Content="Export Height" Click="BtnExportHeight_Click" ToolTip="Save terrain as Grayscale BMP"/>
                        <StackPanel Grid.Column="2">
                            <CheckBox Name="ChkFlipY" Content="Flip Vertical" IsChecked="True" Foreground="#CCC" Margin="0,0,0,2" ToolTip="Check this if North/South are swapped"/>
                            <CheckBox Name="ChkInvert" Content="Invert Colors" IsChecked="False" Foreground="#CCC" Margin="0,0,0,5" ToolTip="Check this if Hills are Valleys"/>
                            <Button Name="BtnInjectHeight" Content="Inject Height" Click="BtnInjectHeight_Click" Background="#444"/>
                        </StackPanel>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Name="BtnShiftHeight" Content="Shift (+/-)" Click="BtnShiftHeight_Click" ToolTip="Move entire map up or down"/>
                        <Button Grid.Column="2" Name="BtnProjectHeight" Content=" Project..." Click="BtnProjectHeight_Click" Background="#68217A" ToolTip="Copy terrain shape from another map"/>
                    </Grid>
                    <TextBlock Text="EDIT POSITION" Style="{StaticResource HeaderStyle}"/>
                    <Button Name="BtnMoveMap" Content="Move World Position (X/Z)" Click="BtnMoveMap_Click" ToolTip="Change MinBounds X/Z to move map location"/>

                    <TextBlock Text="SAVING" Style="{StaticResource HeaderStyle}"/>
                    <TextBlock Text="Target Version:" Margin="0,0,0,3" FontSize="11"/>
                    <ComboBox Name="CmbVersion" SelectedIndex="0" Margin="0,0,0,5" Padding="4">
                        <ComboBoxItem Content="Version 3 (old map)"/>
                        <ComboBoxItem Content="Version 5 (has like additional flags like river etc.)"/>
                        <ComboBoxItem Content="Version 7 (i think for beyond s10 clients xD )"/>
                    </ComboBox>
                    <Button Name="BtnSave" Content="Save .aimesh_ngrid" Click="BtnSave_Click" Background="#007ACC" FontWeight="Bold"/>

                    <TextBlock Text="MAP INFORMATION" Style="{StaticResource HeaderStyle}"/>
                    <Border Background="#333337" CornerRadius="4" Padding="10">
                        <StackPanel>
                            <DockPanel Margin="0,2">
                                <TextBlock Text="Version:" FontWeight="SemiBold" Width="80"/>
                                <TextBlock Name="TxtVersion" Text="-" Foreground="White"/>
                            </DockPanel>
                            <DockPanel Margin="0,2">
                                <TextBlock Text="Dimensions:" FontWeight="SemiBold" Width="80"/>
                                <TextBlock Name="TxtDimensions" Text="-" Foreground="White"/>
                            </DockPanel>
                            <DockPanel Margin="0,2">
                                <TextBlock Text="Cell Size:" FontWeight="SemiBold" Width="80"/>
                                <TextBlock Name="TxtCellSize" Text="-" Foreground="White"/>
                            </DockPanel>
                            <DockPanel Margin="0,2">
                                <TextBlock Text="Total Cells:" FontWeight="SemiBold" Width="80"/>
                                <TextBlock Name="TxtTotalCells" Text="-" Foreground="White"/>
                            </DockPanel>

                            <Separator Background="#555" Margin="0,8"/>

                            <TextBlock Text="Grid Bounds" FontWeight="SemiBold" Foreground="#007ACC" Margin="0,0,0,4"/>
                            <TextBlock Text="Min:" FontSize="11" Foreground="#999"/>
                            <TextBlock Name="TxtMinBounds" Text="(-, -, -)" FontFamily="Consolas" Margin="0,0,0,4" Foreground="White"/>

                            <TextBlock Text="Max:" FontSize="11" Foreground="#999"/>
                            <TextBlock Name="TxtMaxBounds" Text="(-, -, -)" FontFamily="Consolas" Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="CURSOR INFO" Style="{StaticResource HeaderStyle}"/>
                    <Border Background="#333337" CornerRadius="4" Padding="10">
                        <TextBlock Name="TxtCellDetails" Text="Hover over map..." TextWrapping="Wrap" FontFamily="Consolas"/>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <Border Grid.Column="1" Background="#1E1E1E">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" PanningMode="Both">
                <Image Name="ImgMap" Stretch="None" MouseMove="ImgMap_MouseMove" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>